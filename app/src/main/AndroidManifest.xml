<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.steven.android.vocabkeepernew" >
    <uses-permission android:name="ANDROID.PERMISSION.INTERNET"/>
    <uses-permission android:name="ANDROID.PERMISSION.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
         >


        <!--<meta-data android:name="android.app.default_searchable"-->
            <!--android:value=".show.SearchAndShowActivity"/>-->

        <activity
            android:name=".showuservocab.UserVocabActivity"
            android:label="@string/app_name"
            android:theme="@style/VocabAppTheme"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".showuservocab.UserDetailsActivity"
            android:theme="@style/VocabAppTheme"
            />

        <!--HELP:    http://stackoverflow.com/questions/32824079/launchmode-singletask-does-not-create-a-new-task-->
        <activity android:name=".input.TypeWordPopupActivity"
            android:label="Define word"

        android:taskAffinity=""


        android:launchMode="singleTask"
            android:theme="@style/TypeDialogTheme"
            android:windowSoftInputMode="stateVisible"
              />

        <!--android:noHistory="true"-->
        <!--android:excludeFromRecents="true"-->
        <!--http://stackoverflow.com/questions/3282204/android-open-dialogue-activity-without-opening-main-activity-behind-it-->





        <activity android:name=".show.DisplayDefinitionPopupActivity"
            android:theme="@style/VocabDialogTheme"
            android:label="Definition"
            android:configChanges="orientation|keyboardHidden|screenSize"


            android:noHistory="true"
            android:excludeFromRecents="true"


            android:windowSoftInputMode="stateHidden"

            />

        <activity android:name=".show.SearchAndShowActivity"
            android:theme="@style/VocabDialogTheme"
            android:label="Definition"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="stateVisible"
            android:taskAffinity=""
            android:launchMode="singleTop">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

            </intent-filter>

            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.SEARCH" />-->
                <!--<category android:name="android.intent.category.DEFAULT" />-->
            <!--</intent-filter>-->

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>

            <meta-data
                android:name="android.app.default_searchable"
                android:value=".show.SearchAndShow" />

        </activity>

        <!--android:launchMode="singleTask"-->
        <!--android:taskAffinity=""-->

        <!--android:noHistory="true"-->
        <!--android:excludeFromRecents="true"-->


        <!--android:noHistory="true"-->
        <!--android:taskAffinity=""-->
    <!--             http://stackoverflow.com/questions/1979369/android-activity-as-a-dialog-->

        <service
            android:name=".useless.VocabService"
            android:exported="false"/>

        <service android:name=".input.ClipboardWatcherService" />

        <service android:name=".input.FloatingWindowService"/>

        <service android:name=".input.UserVocabInsertService"/>

        <service android:name=".input.ClipboardInputService"/>

        <activity android:name=".input.RelaySpeechActivity"
            android:launchMode="singleInstance"
            android:label="Speech"
            android:taskAffinity=""
            android:excludeFromRecents="true"
        android:theme="@style/Theme.Transparent"
            />

    </application>

</manifest>
