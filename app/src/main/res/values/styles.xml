<resources>

    <style name="VocabAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_blue</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="VocabDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/main_blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>

                <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TypeDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/main_blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>


    </style>


    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#888</item>
    </style>

