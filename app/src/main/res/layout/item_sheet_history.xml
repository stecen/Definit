<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:alpha="1"



    >

    <RelativeLayout android:id="@+id/item_user_vocab_recycler_dateheader"
        android:alpha="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="#eee">

        <View
            android:id="@+id/upper_shadow"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:alpha=".7"
            android:layout_alignParentTop="true"
            android:background="@drawable/drop_shadow2" />

        <TextView
            android:alpha=".57"
            android:textSize="16sp"
            android:id="@+id/item_uservocab_main_dateheader_text"
            android:layout_margin="16dp"
            android:text="DateLol"
            android:textColor="#000"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/lower_shadow"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:alpha=".7"
            android:layout_alignParentBottom="true"
            android:background="@drawable/drop_shadow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_linear_history"
        android:layout_below="@id/item_user_vocab_recycler_dateheader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:padding="16dp"

        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/sheet_word_text"
            android:layout_weight="9"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:alpha=".87"
            android:layout_height="wrap_content"

            android:maxLines="1"
            android:ellipsize="end"


            />
        <!--android:layout_marginTop="16dp"-->
        <!--android:layout_marginStart="16dp"-->
        <!--android:layout_marginBottom="16dp"-->

        <TextView
            android:id="@+id/sheet_time_text"
            android:layout_weight="3"
            android:layout_width="0dp"

            android:textSize="16sp"

            android:textAlignment="textEnd"
            android:layout_gravity="right"
            android:gravity="right"



            android:alpha=".54"
            android:layout_height="wrap_content" />
        <!--android:layout_marginEnd="16dp"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:layout_marginBottom="16dp"-->
    </LinearLayout>

</RelativeLayout>