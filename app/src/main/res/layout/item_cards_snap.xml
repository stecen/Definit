<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"

    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"

    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="#fff">
    <!--android:clickable="true"-->
    <!--android:focusable="true"-->
    <!--android:focusableInTouchMode="true"-->

    <!--TODO: clean this up-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/card_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/toolbar_view"
            android:layout_width="match_parent"
           android:background="#00000000"
            android:layout_height="wrap_content">
        <!--android:background="#4CAF50"-->

            <TextView
                android:id="@+id/word_text"

                android:layout_marginTop="64dp"
                android:layout_marginLeft="16dp"
                android:textSize="28sp"
                android:ellipsize="end"

                android:text="hi"
                android:background="#00ffffff"
                android:textColor="#606060"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/card_fave_image"
                android:layout_alignParentEnd="true"

                android:padding="16dp"
                android:src="@drawable/ic_star_border_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="56dp"

                android:alpha=".2"

                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"/>
            <TextView
                android:id="@+id/card_date_text"
                android:alpha=".2"
                android:textAlignment="viewEnd"
                android:textColor="#000"
                android:gravity="end"
                android:layout_marginRight="16dp"

                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <!--<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->

            <!--android:layout_below="@id/toolbar_view"-->
            <!--android:layout_above="@+id/tag_text"-->
            <!--android:fitsSystemWindows="true">-->


            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="12dp"

                android:id="@+id/definition_example_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar_view"/>

            <!--android:layout_below="@id/definition_example_recycler"-->

        <!--</android.support.design.widget.CoordinatorLayout>-->


        <!--android:layout_alignParentBottom="true"-->
        <TextView
            android:id="@+id/tag_text"
            android:text="''Tag text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:layout_below="@id/definition_example_recycler"

            android:background="@drawable/tag_shape"
            android:textColor="#808080"
            android:alpha=".87" />
    </RelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>

